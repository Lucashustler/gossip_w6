<!--edit gossip -->

<h1>Edit Gossip </h1>

<!--create form to edit -->
<div class="form-group">

    <%= form_for @show_gossips do |f| %>
    <label>Gossip Title</label>
    <%= f.text_field :title %>
</div>

<div class="form-group">
    <label>Edit Gossip</label>
    <%= f.text_area :content, size: "60x12" %>
</div>

<div class="form-group">
    <%= f.submit "Edit" %>
</div>


<% end %>